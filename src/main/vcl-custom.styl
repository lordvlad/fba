:root
  --sidebar-background-color: var(--typography-text-color)
  --sidebar-color: color(var(--sidebar-background-color) contrast())

html, body
  height: 100%

.sidebar, .inner-sidebar
  background: var(--sidebar-background-color)
  color: var(--sidebar-color)
  
  & .vclNavigation .vclNavigationItem
   color: var(--sidebar-color)

.inner-sidebar
  background: color(var(--sidebar-background-color) l(+10))

.vclContentArea
  height: 100%

svg 
  font: 10px sans-serif;

  .axis path, .axis line 
    fill: none;
    stroke: #000;
    shape-rendering: crispEdges;
  
  .background 
    stroke: white;
    stroke-width: 1px;
    fill: white;
  
  .node 
    stroke: black;
    stroke-width: 1px;
    cursor: move;
  
  .node.reaction 
    fill: lightcoral;
  
  .node.species 
    fill: steelblue;
  
  .node.species-reference 
    fill: lightblue;
  
  .group.compartment.cell, .group.compartment.cytosol 
    fill: cadetblue;
  
  .group.compartment.ext, .group.compartment.extracellular 
    fill: salmon;
  
  .link 
      fill: none;
      stroke: #000;
      stroke-width: 3px;
      opacity: 0.7;
      marker-end: url(#end-arrow);
  
  .label 
      fill: black;
      font-family: Verdana;
      font-size: 25px;
      text-anchor: middle;
      cursor: move;
  
  .guideline 
      stroke: orangered;
      stroke-width: 4px;
  
.graph::shadow svg 
  font: 10px sans-serif;

  text
    user-select: none;

  .axis path, .axis line 
    fill: none;
    stroke: #000;
    shape-rendering: crispEdges;
  
  .background 
    stroke: white;
    stroke-width: 1px;
    fill: white;
  
  .node 
    stroke: black;
    stroke-width: 1px;
    cursor: move;
  
  .node.reaction 
    fill: lightcoral;
  
  .node.pool
    fill: steelblue;
  
  .node.pool.clone
    fill: lightblue;
  
  .group.compartment.cell, .group.compartment.cytosol 
    fill: cadetblue;
  
  .group.compartment.ext, .group.compartment.extracellular 
    fill: salmon;
  
  .link 
    fill: none;
    stroke: #000;
    stroke-width: 3px;
    opacity: 0.7;
    marker-end: url(#end-arrow);

  .link.reversible
    marker-start: url(#end-arrow);
  
  .link.modifier
    marker-end: url(#end-circle);
  
  .label 
    fill: black;
    font-family: Verdana;
    font-size: 25px;
    text-anchor: middle;
    cursor: move;
  
  .guideline 
    stroke: orangered;
    stroke-width: 4px;
  